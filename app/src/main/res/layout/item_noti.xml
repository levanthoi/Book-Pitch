<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp">


        <ImageView
            android:id="@+id/image_noti"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/anhtt" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/card"
        android:layout_alignBottom="@+id/card"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="-15dp"
        android:layout_toEndOf="@+id/card"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtTitle_noti"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:text="Các sân còn trống! Bạn có thể tham khảo?"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtContent_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:maxLines="1"
            android:text="Sân trường Đại học Thủy Lợi"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtTime_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="15 phút trước"
            android:textColor="@color/red"
            android:textSize="12sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/txtBacham_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_alignTop="@+id/layout1"
        android:layout_alignBottom="@+id/layout1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        />


</RelativeLayout>