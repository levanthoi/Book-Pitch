<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BookPitch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="android:colorPrimaryDark">@color/gray</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Theme.BookPitch" parent="Base.Theme.BookPitch" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray</item>
        <item name="postSplashScreenTheme">@style/Theme.BookPitch</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:fitsSystemWindows">true</item>-->
    </style>
    <!-- <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/darkGreen</item>
    </style> -->

</resources>