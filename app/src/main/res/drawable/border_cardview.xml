<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Điều chỉnh góc bo của cardView -->
            <solid android:color="@color/lightGreen" /> <!-- Màu nền khi được chọn -->
        </shape>
    </item>
    <!-- Unselected state -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Điều chỉnh góc bo của cardView -->
            <solid android:color="@color/gray50" /> <!-- Màu nền khi không được chọn -->
        </shape>
    </item>
</selector>